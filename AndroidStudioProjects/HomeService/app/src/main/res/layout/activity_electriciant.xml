<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BFFFFFF"
    tools:context=".Electriciant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aladin"
            android:text="Electrician"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:cropToPadding="true"
            android:src="@drawable/electriciant" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="All Services Are Available"
    android:textSize="30sp"
    android:layout_marginTop="-20dp"
    android:textColor="@color/black"
    android:fontFamily="@font/aladin"
    android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_centerInParent="true"
                android:alpha="0.2"
                android:background="@drawable/electrician" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/aladin"
                android:layout_margin="20dp"
                android:text="@string/elctrican_activity"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </RelativeLayout>

       <Button
           android:id="@+id/elctriciant"
           android:layout_width="250dp"
           android:layout_height="60dp"
           android:text="@string/btn_text"
           android:layout_gravity="center"
           android:backgroundTint="#DF4C1E"/>

    </LinearLayout>
</ScrollView>